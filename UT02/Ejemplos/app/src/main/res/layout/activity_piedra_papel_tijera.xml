<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PiedraPapelTijera">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="40dp"
        android:layout_height="17dp"
        android:text="Papel"
        app:layout_constraintBottom_toTopOf="@+id/bPapel"
        app:layout_constraintEnd_toEndOf="@+id/bPapel"
        app:layout_constraintStart_toStartOf="@+id/bPapel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tijeras"
        app:layout_constraintBottom_toTopOf="@+id/bTijeras"
        app:layout_constraintEnd_toEndOf="@+id/bTijeras"
        app:layout_constraintStart_toStartOf="@+id/bTijeras"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piedra"
        app:layout_constraintBottom_toTopOf="@+id/bPiedra"
        app:layout_constraintEnd_toEndOf="@+id/bPiedra"
        app:layout_constraintStart_toStartOf="@+id/bPiedra"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bPapel"
        android:layout_width="62dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toTopOf="@+id/tEleccionMaquina"
        app:layout_constraintEnd_toEndOf="@+id/tEleccionMaquina"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/tEleccionMaquina"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641"
        app:srcCompat="@drawable/papel" />

    <ImageButton
        android:id="@+id/bTijeras"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/bPapel"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tijeras" />

    <ImageButton
        android:id="@+id/bPiedra"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toStartOf="@+id/bPapel"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/piedra" />

    <TextView
        android:id="@+id/tEleccionMaquina"
        android:layout_width="212dp"
        android:layout_height="24dp"
        android:layout_marginBottom="72dp"
        android:text="La maquina ha sacado..."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tTurno"
        app:layout_constraintEnd_toEndOf="@+id/tTurno"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/tTurno"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tTurno"
        android:layout_width="117dp"
        android:layout_height="19dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="60dp"
        android:text="Máquina"
        app:layout_constraintBottom_toTopOf="@+id/tPuntuacionIA"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:text="Tú"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tPuntuacionTu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/tPuntuacionIA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tPuntuacionIA"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tPuntuacionIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="72dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/bReset"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bReset"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849" />

</androidx.constraintlayout.widget.ConstraintLayout>