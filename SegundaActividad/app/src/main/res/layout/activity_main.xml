<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bContador"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="119dp"
        android:layout_height="82dp"
        android:text="Pulsame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lSalida"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/lSalida"
        app:layout_constraintTop_toBottomOf="@+id/lSalida"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        app:layout_constraintEnd_toEndOf="@+id/bDoblar"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/bDoblar"
        app:layout_constraintTop_toBottomOf="@+id/bDoblar" />

    <Button
        android:id="@+id/bDoblar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplica"
        app:layout_constraintEnd_toEndOf="@+id/bContador"
        app:layout_constraintStart_toStartOf="@+id/bContador"
        app:layout_constraintTop_toBottomOf="@+id/bContador" />

</androidx.constraintlayout.widget.ConstraintLayout>